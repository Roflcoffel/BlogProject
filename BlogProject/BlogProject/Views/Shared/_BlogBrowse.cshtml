@model BlogProject.Models.Blog


<div class="col-md-1">
    <h3><span class="badge badge-primary">@Model.BlogViews()</span></h3>
</div>

<div class="col-md-4">
    <img class="img-thumbnail" src="@Url.Content(Model.ImageUrl)" alt="Card image">
</div>
    
<div class="col-md d-flex align-items-start flex-column">
    <div class="row mb-auto">
        <div class="col-md">
            <a href="@Url.Action("ViewBlog","Blog", new { id = Model.Id})">
                <h3>@Model.Title</h3>
            </a>

            <p>@Model.Body</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md">
            <span class="badge badge-success">@Model.Created.ToShortDateString()</span>
            <span class="badge badge-info">@Model.Posts.Count() Posts</span>
            <span class="badge badge-danger">@Model.BlogTagString()</span>
        </div>
        
    </div>
   


</div>
