@model IEnumerable<BlogProject.Models.Post>

@{
    ViewBag.Title = "MyPosts";
}

<div class="row">
    <div class="col-10">
        <h3>Posts for @ViewBag.ParentBlog</h3>
    </div>
    <div class="col-2">
        <a href="@Url.Action("Create","Post",new {id = Model.FirstOrDefault().Blog.Id})"
         role="button" class="btn btn-success">Create Post</a>
    </div>
</div>

<div class="col">
    @foreach (var item in Model)
    {
        <div class="row">
            @Html.Partial("_Post", item)
        </div>
    }
</div>

<br />
<div class="text-right">
    <div class="col-md-12">
        @Html.ActionLink("Return to My Blogs", "MyBlogs", "Profile", null, new { @class = "btn  btn-default" })
    </div>
</div>


