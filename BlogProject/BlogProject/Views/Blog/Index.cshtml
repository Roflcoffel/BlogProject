@model IEnumerable<BlogProject.Models.Blog>
<body >
    @{
        ViewBag.Title = "Index";
    }
    
        <h2>Here the index of the blogs !</h2>
    <br/>
    <br/>
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Body)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Created)
                </th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Body)
                    </td>
                    <td>
                        <img src="@Url.Content(item.ImageUrl)" style="height:200px;width:200px;" class="img-rounded" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td style="padding-right:0em">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm" }) 
                        @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                        @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                    </td>
                    <td style="padding-left:0em">
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                        @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>}

        </table>
    </body>

<hr />
<div class="row text-right">
    <div class="col-8"></div>
    <div class="col-4">
        <a href="@Url.Action("Index","Profile")" style="color:red">Return to Admin functions</a>
    </div>

</div>
