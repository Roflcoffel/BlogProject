@model IEnumerable<BlogProject.Models.Post>

@{
    ViewBag.Title = "Index";
}

@*<h2>Index</h2>*@

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Body)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastChanged)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Views)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Body)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            <img src="@Url.Content(item.ImageUrl)" style="height:200px;width:200px;" class="img-rounded img-thumbnail" />
            @*@Html.DisplayFor(modelItem => item.ImageUrl)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastChanged)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Views)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { postId = item.Id }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Delete", "Delete", new { postId = item.Id })
        </td>
    </tr>
}

</table>
