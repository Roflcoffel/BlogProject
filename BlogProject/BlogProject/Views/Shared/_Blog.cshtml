@model BlogProject.Models.Blog




<div class="col blogCard">
    <div class="row">
        <a href="@Url.Action("ViewBlog","Blog",new {Id = Model.Id })" style="margin-left:10px; font-size:20px" class="btn btn-primary col-4" role="button">@Model.Title</a>
        <div class="col-3">  </div>
        <div class="col-4 ">
            <a href="@Url.Action("MyPosts","Profile", new { id = Model.Id })" role="button" class="btn btn-info btn-sm @(Model.Posts.Count() != 0 ? "": "disabled")">
                View Posts
            </a>

            <a href="@Url.Action("Create","Post", new { id = Model.Id })" role="button" class="btn btn-info btn-sm">
                Create Post
            </a>

            <a href="@Url.Action("Edit","Blog", new { id = Model.Id })" role="button" class="btn btn-success btn-sm">
                Edit
            </a>
            <a href="@Url.Action("Delete","Blog", new { id = Model.Id })" role="button" class="btn btn-danger btn-sm">
                Delete
            </a>
        </div>

    </div>
    <div class="row">
        <br />
    </div>
    <div class="row">
        <div class="col-4">
            <span class="badge badge-pill badge-info">@Model.Posts.Count() Posts</span>
            <span class="badge badge-pill badge-success">@Model.BlogViews() Views</span>
            <span class="badge badge-pill badge-success">Created: @Model.Created.ToShortDateString()</span>
            <span class="badge badge-pill badge-info">Tags: @Model.BlogTagString()</span>
        </div>
        @*<div class="col-4">

            </div>*@
    </div>
</div>
